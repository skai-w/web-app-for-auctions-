<style>  
    :root {
  --gradient: linear-gradient(to left top, rgba(255,255,255,0.13) 10%, #1845ad 90%) !important;
}

body {
  background: #080710 !important;
}

.card {
  background: #222;
  border: 1px solid #ffffff;
  color: rgba(250, 250, 250, 0.8);
  margin-bottom: 2rem;
}

.btn {
  border: 5px solid;
  width: 100%;
  border-image-slice: 1;
  background:#ffffff;
  -webkit-background-clip: text !important;
  -webkit-text-fill-color: transparent !important;
  border-image-source:  var(--gradient) !important; 
  text-decoration: none;
  transition: all .4s ease;
}

.btn:hover, .btn:focus {
      background: var(--gradient) !important;
  -webkit-background-clip: none !important;
  -webkit-text-fill-color: #fff !important;
  border: 5px solid #fff !important; 
  box-shadow: #222 1px 0 10px;
  text-decoration: underline;
}
   

    </style>

<div class="container ">
    <div class="row">
      <% items.forEach(item => { %>
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
    <img src="<%= item.image %> " alt="item" class="card-img-top" >
    <div class="card-body">
      <h5 class="card-title"> <%= item.nomItem %> </h5>
          <h6 class="card-subtitle mb-2 text-muted">Estimation: <%= item.estim %> </h6>
      <p class="card-text">DESCRIPTION : <%= item.description %> .</p>
         <a href="http://localhost:3000/items/displayitem/<%= item._id %>" class="btn mr-2">Encherir </a>
        
     
    </div>
    </div>
   
      </div> 
      <% }) %>  
      
        
  </div>
    </div>
